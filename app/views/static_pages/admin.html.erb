<div class="row-fluid">
	<div class="span12">
	<h1>Administer FINANCE LEADS Program Members</h1>
	<div class="row-fluid">
		<div class="span6">
			<%= link_to 'Manage Members', finance_customers_path, :class => 'btn' %>
			<%= link_to 'View Leads as Member', "#", :class => 'btn' %>
			<br />
			
			<%= link_to 'Leads by State by Month', countstates_finance_leads_url, :class => 'btn' %>
			<%= link_to 'Count Members By State', "#", :class => 'btn' %>
			<%= link_to 'Manage States', "#", :class => 'btn' %>
			
		</div>
		<div class="row-fluid">
			<div class="span12">
				<hr />
			</div>
		</div>
		<div class="row-fluid">
			<div class="span12">
				<table>
					<caption>Member Summary</caption>
					<thead>
						<tr>
							<th>Member ID</th>
							<th>Limit</th>
							<th>Actions</th>
						</tr>
					</thead>
					<% @finance_customers.each do |finance_customer| %>
					<tr>
						<td><%= finance_customer.name %></td>
						<td><%= finance_customer.limit %></td>
						
						<td>
						<%= render :partial => "finance_customers/finance_customer_actions", :locals => { :finance_customer => finance_customer }%>
							
						</td>
					</tr>
					<% end %>
					
				</table>
			</div>
			
		</div>
	</div>
</div>
