<!DOCTYPE html>
<html lang="en">
<head>
  <title>Finance</title>
  <%=  render 'layouts/includes/bootstrap_css' %>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<% if signed_in? %>
<%= render 'layouts/menu' %>
<% else %>
<p style="display: none;">Not signed in</p>
<% end %>
<div class="container">
	<%= render partial: "layouts/flash_messages", flash: flash %> 
	<%= yield %>
</div>

	<%=  render 'layouts/includes/bootstrap_js' %>
</body>
</html>
