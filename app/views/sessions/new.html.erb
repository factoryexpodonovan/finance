<% provide(:title, "Sign In") %>

<h1>Sign In</h1>


<div class="row">
	<div class="span6 offset3">
		<%= bootstrap_form_for(:session, url: sessions_path) do |f| %>
			<fieldset>
				<legend>Sign In</legend>
				<%= f.text_field :name %>
				
				<%= f.password_field :password %>
				
				<%= f.submit "Sign in", class: "btn" %>
			</fieldset>
		<% end %>
		
	</div>
</div>
